local function createServerScript()
    -- Create a new script instance
    local scriptInstance = Instance.new("Script")
    scriptInstance.Name = "ServerPartDecalScript"

    -- Define the source code for the inner script
    local scriptSource = [[
        -- Function to remove parts named "part" or "Part"
        local function removeSpecificParts()
            for _, obj in pairs(workspace:GetDescendants()) do
                if obj:IsA("Part") and (obj.Name == "part" or obj.Name == "Part") then
                    obj:Destroy()
                    print("Removed: " .. obj.Name)
                end
            end
        end

        -- Function to change the Texture ID of all decals
        local function changeDecalsTextureID()
            local newDecalID = "80374755055874"
            for _, obj in pairs(workspace:GetDescendants()) do
                if obj:IsA("Decal") then
                    obj.Texture = "rbxassetid://" .. newDecalID
                    print("Updated decal: " .. obj:GetFullName())
                end
            end
        end

        -- Main function to execute both tasks
        local function executeServerScript()
            removeSpecificParts()
            changeDecalsTextureID()
        end

        -- Execute the script on server start
        executeServerScript()
    ]]

    -- Assign the inner script's source code
    scriptInstance.Source = scriptSource

    -- Move the script to ServerScriptService
    local serverScriptService = game:GetService("ServerScriptService")
    scriptInstance.Parent = serverScriptService
end

-- Call the function to create and place the script
createServerScript()
